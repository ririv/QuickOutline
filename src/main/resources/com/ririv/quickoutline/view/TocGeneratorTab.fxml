<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import com.ririv.quickoutline.view.controls.EditorTextArea?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ririv.quickoutline.view.TocGeneratorTabController" alignment="CENTER" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <TextArea fx:id="titleTextArea" prefHeight="40.0" promptText="%tocTitleTextArea.prompt" />
    <EditorTextArea fx:id="tocContentTextArea" VBox.vgrow="ALWAYS" promptText="%tocContentTextArea.prompt"/>
    <Button text="Generate TOC Page" onAction="#generateTocPageAction"/>
</VBox>