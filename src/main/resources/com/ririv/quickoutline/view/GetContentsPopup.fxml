<fx:root type="javafx.scene.layout.StackPane" xmlns:fx="http://javafx.com/fxml"
         stylesheets="@MainView.css">
    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label styleClass="title" text="%getContentsPopup.title" />

        <RadioButton2Group alignment="CENTER" spacing="0">
            <fx:define>
                <ToggleGroup fx:id="myToggleGroup" />
            </fx:define>
            <children>
                <RadioButton2 text="Option A" toggleGroup="$myToggleGroup" selected="true"/>
                <RadioButton2 text="Option B" toggleGroup="$myToggleGroup"/>
                <RadioButton2 text="Option C" toggleGroup="$myToggleGroup"/>
            </children>
        </RadioButton2Group>

        <HBox>
            <HBox HBox.hgrow="ALWAYS" /> <!--两端对齐-->
            <Button fx:id="extractTocBtn" styleClass="my-button, default-button" text="%extractTocBtn.text"
                    prefWidth="80" prefHeight="25" />
        </HBox>
    </VBox>
</fx:root>


