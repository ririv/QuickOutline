<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ririv.quickoutline.view.PdfViewerTabController" prefHeight="800.0" prefWidth="600.0">
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" BorderPane.alignment="CENTER">
            <content>
                <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" />
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <ToolBar BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="prevButton" onAction="#handlePrevPage" text="上一页" />
                <Label fx:id="pageLabel" text="0 / 0" />
                <Button fx:id="nextButton" onAction="#handleNextPage" text="下一页" />
                <Label text="跳转到:" />
                <TextField fx:id="pageField" onAction="#handleGoToPage" prefWidth="50" />
                <Button fx:id="goButton" onAction="#handleGoToPage" text="跳转" />
            </items>
        </ToolBar>
    </bottom>
</BorderPane>
