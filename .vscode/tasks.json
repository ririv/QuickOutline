{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tauri-dev",
      "type": "shell",
      // 如果你用 npm，请保留下面这行
      "command": "npm run tauri dev",
      // 如果你用 pnpm，改成: "pnpm tauri dev"
      // 如果你用 yarn，改成: "yarn tauri dev"
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Local:\\s+http://localhost:\\d+/" 
        }
      }
    }
  ]
}