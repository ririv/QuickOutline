{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "log:default",
    "core:webview:allow-print",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$RESOURCE/**/*"
        }
      ]
    },
    "shell:default",
    "dialog:default",
    "fs:default",
    "fs:allow-stat",
    "fs:allow-open",
    "fs:allow-read",
    "fs:allow-seek",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**"
      ]
    }
  ]
}