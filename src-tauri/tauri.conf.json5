{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickOutline",
  "version": "3.0.0-pre",
  "identifier": "com.ririv.quickoutline",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "QuickOutline",
        "width": 1024,
        "height": 768,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' blob: data: asset: http://asset.localhost http://127.0.0.1:*; connect-src 'self' http://127.0.0.1:* ws://127.0.0.1:*"
    }
  },
  "bundle": {
    "active": true,
    // 不要msi，msi对版本号有严格要求，不可以出现 X.X.X-pre 的后缀
    "targets": ["nsis", "dmg", "app", "rpm", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../build/libs/": "resources/libs/",
      "libs/": "libs/"
    }
  },
  "plugins": {
    "cli": {
      "description": "QuickOutline CLI",
      "args": []
    }
  }
}
